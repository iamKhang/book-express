<h1>{{title}}</h1>
<div class="container">
  <!-- Search bar -->
  <div class="container my-5">
    <form class="row g-3 align-items-center bg-light p-4 rounded shadow-sm" action="/search" method="GET">
      <div class="col-md-3">
        <select class="form-select border-0 bg-white shadow-sm" name="category" aria-label="Chọn danh mục">
          <option value="">Chọn danh mục</option>
          <option value="Sách thiếu nhi">Sách thiếu nhi</option>
          <option value="Sách giáo khoa">Sách giáo khoa</option>
          <option value="Sách kỹ năng sống">Sách kỹ năng sống</option>
          <option value="Sách văn học">Sách văn học</option>
          <option value="Sách khoa học">Sách khoa học</option>
        </select>
      </div>
      <div class="col-md-3">
        <select class="form-select border-0 bg-white shadow-sm" name="priceRange" aria-label="Chọn giá">
          <option value="">Chọn giá</option>
          <option value="0-100000">Dưới 100.000đ</option>
          <option value="100000-200000">100.000đ - 200.000đ</option>
          <option value="200000-500000">200.000đ - 500.000đ</option>
          <option value="500000-999999999">Trên 500.000đ</option>
        </select>
      </div>
      <div class="col-md-4">
        <input class="form-control border-0 bg-white shadow-sm" type="search" name="keyword" placeholder="Tìm kiếm" aria-label="Search">
      </div>
      <div class="col-md-2">
        <button class="btn btn-primary w-100 text-white shadow-sm" type="submit" style="background-color: rgb(0, 107, 179); border-color: rgb(0, 107, 179);">
          <i class="bi bi-search me-2"></i>Tìm kiếm
        </button>
      </div>
    </form>
  </div>
  
  <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-4">
    {{#each books}}
      {{> product-card}}
    {{/each}}
  </div>
</div>


<style>
  .form-select:focus,
  .form-control:focus {
    border-color: rgb(0, 107, 179);
    box-shadow: 0 0 0 0.2rem rgba(0, 107, 179, 0.25);
  }
  
  .btn-primary:hover {
    background-color: rgb(0, 87, 159) !important;
    border-color: rgb(0, 87, 159) !important;
  }
</style>