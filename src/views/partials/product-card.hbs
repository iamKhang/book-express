<div class="col">
  <a href="/books/{{_id}}" class="text-decoration-none text-dark d-block h-100">
    <div class="card h-100 position-relative">
      {{#if discount}}
        <span class="badge bg-danger position-absolute top-1 end-1">-{{discount}}%</span>
      {{/if}}
      <img src="{{imageUri}}" class="card-img-top" alt="{{title}}" />
      <div class="card-body d-flex flex-column">
        <h5 class="card-title small fw-normal">{{title}}</h5>
        <div class="mt-auto">
          <p class="text-danger fw-bold mb-0">{{discountedPrice}}</p>
          {{#if discount}}
            <p class="text-decoration-line-through text-muted small mb-2">{{originalPriceFormatted}}</p>
          {{/if}}
          <div class="d-flex justify-content-between align-items-center">
            <span class="badge bg-secondary">Đã bán {{stock}}</span>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>